<!DOCTYPE html>
<html>
  <head>
    <title>{{ general.title }}</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="text/x-mathjax-config">
      MathJax.Hub.Config({
        config: ["MMLorHTML.js"],
        extensions: ["tex2jax.js"],
        jax: ["input/TeX", "output/HTML-CSS", "output/NativeMML"],
        tex2jax: {
          inlineMath: [["\\(", "\\)"]],
          displayMath: [["\\[", "\\]"]],
          processEscapes: true,
          processEnvironments: true,
          ignoreClass: ".*|",
          processClass: "arithmatex",
        },
      });
    </script>
    <script type="text/javascript" id="MathJax-script"
      src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js">
    </script>
    <style>
      {% include "html/style.css.j2" %}
    </style>
  </head>
  <body>
  <div class="sidenav">
    <div class="sidenav-title">Content</div>
    {% for chapter in package["chapters"] %}
      <a href="#chap-{{ loop.index }}">{{chapter.title}}</a>
    {% endfor %}
  </div>
  <div class="content">
    <h1>{{ general.title }}</h1>
    <div overflow: hidden>{{ input.macros }}</div>
    {% for chapter in package["chapters"] %}
      <h2 id="chap-{{ loop.index }}">{{ chapter.title }}</h2>
      {% for item in chapter["items"] %}
        <div class="card">
          <div class="question">{{ item.question }}</div>
          <div class="solution">{{ item.answer }}</div>
        </div>
      {% endfor %}
    {% endfor %}
  </div>
  </body>
</html>
